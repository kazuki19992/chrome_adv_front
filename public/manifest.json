{
  "manifest_version": 2,
  "name": "Chrome-ADV",
  "version": "1",
  "browser_action": {
    "default_icon": "logo192.png",
    "default_popup": "index.html"
  },
  "content_scripts" : [
    {
      "matches": [ "<all_urls>" ],
      "js": ["/static/js/content_script.js"]
    }
  ],
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["/static/js/background_script.js"]
  }
}